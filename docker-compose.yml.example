version: '3.8'

services:
  rqlite:
    image: rqlite/rqlite:latest
    container_name: patina-rqlite
    ports:
      - "4001:4001"  # HTTP API port
      - "4002:4002"  # Cluster communication port
    volumes:
      - rqlite-data:/rqlite/file
    command: >
      -node-id 1
      -http-addr 0.0.0.0:4001
      -raft-addr 0.0.0.0:4002
    restart: unless-stopped

volumes:
  rqlite-data: